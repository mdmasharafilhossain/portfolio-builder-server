generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  ADMIN
  USER
}
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(ADMIN)
  blogs     Blog[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
model Blog {
  id        String   @id @default(cuid())
  title     String
  content   String
  excerpt   String
  slug      String   @unique
  published Boolean  @default(false)
  imageUrl  String?
  tags      String[]
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blogs")
}
model Project {
  id              String   @id @default(cuid())
  title           String
  description     String
  longDescription String
  technologies    String[]
  projectUrl      String?
  githubUrl       String?
  liveUrl         String?
  featured        Boolean  @default(false)
  imageUrl        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("projects")
}

model About {
  id         String       @id @default(cuid())
  name       String
  title      String
  bio        String
  email      String
  phone      String?
  location   String?
  avatarUrl  String?
  resumeUrl  String?
  socialLinks Json
  skills     Json
  experiences Json
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@map("about")
}